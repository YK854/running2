<h4>ユーザー一覧</h4>
<table>
  <tr>
    <th>ユーザーID</th>
    <th>ユーザー名</th>
    <th>メールアドレス</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <th><%= link_to user.id, user_path(user.id) %></th>
      <th><%= link_to user.name, user_path(user.id) %></th>
      <th><%= link_to user.email, user_path(user.id) %></th>
      <% if user == current_user %>
        <th><%= link_to '削除', user_path(user.id), method: :delete %></th>
      <% end %>
    </tr>
  <% end %>
</table>